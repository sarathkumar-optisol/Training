<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Training" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/dark_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="buttonStyle">@color/green</item>
        <item name="android:buttonStyle">@color/green</item>
        <item name="iconTint">@color/white</item>

    </style>



    <style name="main_activity_button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="textviewCustomStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">4dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:background">@color/green</item>
        <item name="android:textAlignment">center</item>


    </style>






</resources>


